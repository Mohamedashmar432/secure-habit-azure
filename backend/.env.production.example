# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://<username>:<password>@securehabit-cluster.xxxxx.mongodb.net/securehabit?retryWrites=true&w=majority

# Security
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long

# Frontend URL (update with your Vercel deployment URL)
FRONTEND_URL=https://your-app-name.vercel.app

# AI Gateway Configuration
GEMINI_API_KEY_1=your-primary-gemini-api-key
GEMINI_API_KEY_2=your-secondary-gemini-api-key
GEMINI_API_KEY_3=your-tertiary-gemini-api-key
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# External API Configuration
NVD_API_DELAY=6000
CISA_KEV_UPDATE_INTERVAL=3600000